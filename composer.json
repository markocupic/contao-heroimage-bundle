{
    "name": "markocupic/contao-heroimage-bundle",
    "description": "Add a heroimage element to contao.",
    "keywords": [
        "contao",
        "bundle",
        "heroimage"
    ],
    "type": "contao-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Marko Cupic",
            "email": "m.cupic@gmx.ch",
            "homepage": "https://github.com/markocupic/contao-heroimage-bundle",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/markocupic/contao-heroimage-bundle/issues",
        "source": "https://github.com/markocupic/contao-heroimage-bundle"
    },
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^4.13 || ^5.0"
    },
    "require-dev": {
        "contao/test-case": "^4.0",
        "contao/php-cs-fixer": "^2.2",
        "contao/manager-plugin": "^2.3",
        "phpunit/phpunit": "^8.4",
        "symfony/http-client": "4.4.*",
        "symfony/phpunit-bridge": "4.4.*"
    },
    "autoload": {
        "psr-4": {
            "Markocupic\\ContaoHeroimageBundle\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Markocupic\\ContaoHeroimageBundle\\ContaoManager\\Plugin"
    }
}
