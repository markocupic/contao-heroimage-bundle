{
    "name": "markocupic/contao-heroimage-bundle",
    "description": "Add a heroimage element to contao.",
    "keywords": [
        "contao",
        "bundle",
        "heroimage"
    ],
    "type": "contao-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Marko Cupic",
            "email": "m.cupic@gmx.ch",
            "homepage": "https://github.com/markocupic/contao-heroimage-bundle",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/markocupic/contao-heroimage-bundle/issues",
        "source": "https://github.com/markocupic/contao-heroimage-bundle"
    },
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^4.13 || ^5.0",
        "markocupic/contao-twig-assets": "^1.0"
    },
    "require-dev": {
        "contao/easy-coding-standard": "^5.0",
        "contao/manager-bundle": "^4.13",
        "contao/manager-plugin": "^2.3.1",
        "contao/test-case": "^4.6",
        "phpunit/phpunit": "^9.6",
        "symfony/phpunit-bridge": "^v6.2"
    },
    "autoload": {
        "psr-4": {
            "Markocupic\\ContaoHeroimageBundle\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Markocupic\\ContaoHeroimageBundle\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "contao-components/installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "contao/manager-plugin": true,
            "php-http/discovery": true
        }
    }
}
